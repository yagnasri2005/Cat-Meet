  input, select, button { padding: 8px; margin-bottom: 15px; width: 100%; border-radius: 5px; border: 1px solid #ccc; }
  .matches { display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 15px; margin-top: 20px; }
  .card { background: #fff; padding: 15px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); text-align: center; }
  .card img { width: 100%; border-radius: 10px; }
