<body>

<header>
  <h1>üê± Cat Dating App</h1>
  <p>Find the purr-fect match for your cat!</p>
</header>

<section>
  <h2>Create Your Cat Profile</h2>
  <form id="catForm">
    <label for="name">Cat Name:</label>
    <input type="text" id="name" required>

    <label for="age">Age:</label>
    <input type="number" id="age" min="0" required>

    <label for="activity">Favorite Activity:</label>
    <select id="activity">
      <option>Sleeping</option>
      <option>Playing</option>
      <option>Eating</option>
      <option>Exploring</option>
    </select>

    <label for="personality">Personality:</label>
    <select id="personality">
      <option>Playful</option>
      <option>Shy</option>
      <option>Cuddly</option>
      <option>Adventurous</option>
    </select>

    <button type="submit">Find Matches</button>
  </form>

  <div id="matches" class="matches"></div>
</section>

<script>
const cats = [
  {name: 'Whiskers', age: 2, activity: 'Playing', personality: 'Playful', img: 'https://images.unsplash.com/photo-1600607686246-36f1a66e7ccf?auto=format&fit=crop&w=400&q=60'},
  {name: 'Mittens', age: 3, activity: 'Sleeping', personality: 'Shy', img: 'https://images.unsplash.com/photo-1592194996308-7f35d5ee6f7c?auto=format&fit=crop&w=400&q=60'},
  {name: 'Tiger', age: 1, activity: 'Exploring', personality: 'Adventurous', img: 'https://images.unsplash.com/photo-1592194996308-7f35d5ee6f7c?auto=format&fit=crop&w=400&q=60'},
  {name: 'Luna', age: 4, activity: 'Eating', personality: 'Cuddly', img: 'https://images.unsplash.com/photo-1592194996308-7f35d5ee6f7c?auto=format&fit=crop&w=400&q=60'},
];

const form = document.getElementById('catForm');
const matchesDiv = document.getElementById('matches');

form.addEventListener('submit', function(e) {
  e.preventDefault();
  const name = document.getElementById('name').value;
  const age = parseInt(document.getElementById('age').value);
  const activity = document.getElementById('activity').value;
  const personality = document.getElementById('personality').value;

  // Simple matching: match cats with same activity or personality
  const matches = cats.filter(cat => cat.activity === activity || cat.personality === personality);

  matchesDiv.innerHTML = '<h3>Matches for ' + name + ':</h3>' + 
    matches.map(cat => `
      <div class="card">
        <img src="${cat.img}" alt="${cat.name}">
        <h4>${cat.name}</h4>
        <p>Age: ${cat.age}</p>
        <p>Activity: ${cat.activity}</p>
        <p>Personality: ${cat.personality}</p>
      </div>
    `).join('');
});
</script>

</body>
